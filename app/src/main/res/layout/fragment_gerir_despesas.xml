<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GerirDespesasFragment">

    <!-- TODO: Update blank fragment layout -->

    <EditText
        android:id="@+id/ValorText"
        android:layout_width="107dp"
        android:layout_height="48dp"
        android:layout_marginStart="92dp"
        android:layout_marginBottom="124dp"
        android:inputType="number"
        android:translationZ="90dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginBottom="192dp"
        android:text="Descrição:"
        android:textSize="20dp"
        android:translationZ="90dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginBottom="136dp"
        android:text="Valor:"
        android:textSize="20dp"
        android:translationZ="90dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/ExcluirDespesa"
        android:layout_width="141dp"
        android:layout_height="40dp"
        android:layout_marginEnd="52dp"
        android:layout_marginBottom="24dp"
        android:text="Excluir"
        android:textAlignment="center"
        android:textSize="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/SalvarDespesa"
        android:layout_width="139dp"
        android:layout_height="40dp"
        android:layout_marginStart="52dp"
        android:layout_marginBottom="24dp"
        android:text="Salvar"
        android:textAlignment="center"
        android:textSize="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/AdicionarDespesa"
        android:layout_width="305dp"
        android:layout_height="44dp"
        android:layout_marginStart="53dp"
        android:layout_marginEnd="53dp"
        android:layout_marginBottom="67dp"
        android:text="Adicionar Receita/Despesa"
        android:textAlignment="center"
        android:textSize="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ScrollView
        android:id="@+id/activity_scrollView1"
        android:layout_width="420dp"
        android:layout_height="367dp"
        android:layout_marginTop="46dp"
        android:layout_marginBottom="302dp"
        android:layout_weight="1"
        android:fillViewport="true"
        android:scrollbarStyle="outsideInset"
        android:scrollbars="horizontal|vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TableLayout
            android:id="@+id/Tabela"
            android:layout_width="378dp"
            android:layout_height="366dp"
            android:layout_marginStart="13dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/table_row_bg"
            android:isScrollContainer="true"
            android:stretchColumns="1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TableRow
                android:id="@+id/tableRow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:stretchColumns="3">

                <TextView
                    android:layout_width="166dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="2dp"
                    android:background="@drawable/table_cell_bg"
                    android:padding="3dip"
                    android:text="Descrição"
                    android:textAlignment="center"
                    tools:layout_conversion_absoluteHeight="26dp"
                    tools:layout_conversion_absoluteWidth="69dp"
                    tools:layout_editor_absoluteX="13dp"
                    tools:layout_editor_absoluteY="16dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:background="@drawable/table_cell_bg"
                    android:padding="3dip"
                    android:text="Valor"
                    android:textAlignment="center"
                    tools:layout_conversion_absoluteHeight="26dp"
                    tools:layout_conversion_absoluteWidth="275dp"
                    tools:layout_editor_absoluteX="82dp"
                    tools:layout_editor_absoluteY="16dp" />

                <TextView
                    android:layout_width="92dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="2dp"
                    android:background="@drawable/table_cell_bg"
                    android:padding="3dip"
                    android:text="Tipo"
                    android:textAlignment="center"
                    tools:layout_conversion_absoluteHeight="26dp"
                    tools:layout_conversion_absoluteWidth="34dp"
                    tools:layout_editor_absoluteX="357dp"
                    tools:layout_editor_absoluteY="16dp" />
            </TableRow>
        </TableLayout>
    </ScrollView>

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="164dp"
        android:layout_marginBottom="136dp"
        android:text="Tipo:"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/DescricaoText"
        android:layout_width="233dp"
        android:layout_height="46dp"
        android:layout_marginStart="140dp"
        android:layout_marginBottom="180dp"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Spinner
        android:id="@+id/Tipo"
        android:layout_width="128dp"
        android:layout_height="31dp"
        android:layout_marginEnd="36dp"
        android:layout_marginBottom="132dp"
        android:entries="@array/Tipos"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>